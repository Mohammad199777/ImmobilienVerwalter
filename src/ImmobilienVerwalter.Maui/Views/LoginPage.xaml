<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ImmobilienVerwalter.Maui.ViewModels"
             x:Class="ImmobilienVerwalter.Maui.Views.LoginPage"
             Title="Anmelden"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Gray100}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center" MaximumWidthRequest="400">

            <!-- Logo / Titel -->
            <Label Text="ðŸ " FontSize="60" HorizontalOptions="Center" />
            <Label Text="ImmobilienVerwalter"
                   FontSize="28" FontAttributes="Bold"
                   HorizontalOptions="Center" TextColor="{StaticResource Primary}" />
            <Label Text="Verwaltung fÃ¼r kleine Vermieter"
                   FontSize="14" HorizontalOptions="Center"
                   TextColor="{StaticResource Gray600}" />

            <!-- Formular -->
            <Frame Padding="20" CornerRadius="12" BorderColor="Transparent" BackgroundColor="White"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <Label Text="E-Mail" FontSize="14" FontAttributes="Bold" />
                    <Entry Placeholder="name@example.com"
                           Text="{Binding Email}"
                           Keyboard="Email"
                           ReturnType="Next" />

                    <Label Text="Passwort" FontSize="14" FontAttributes="Bold" />
                    <Entry Placeholder="Passwort eingeben"
                           Text="{Binding Password}"
                           IsPassword="True"
                           ReturnType="Go"
                           ReturnCommand="{Binding LoginCommand}" />

                    <!-- Fehlermeldung -->
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="Red" FontSize="13"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />

                    <!-- Login Button -->
                    <Button Text="Anmelden"
                            Command="{Binding LoginCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="48"
                            CornerRadius="8" />

                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="{StaticResource Primary}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
